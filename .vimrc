set nocompatible
" format
set autoindent
" Set line numbers
"set nu
set smartindent
set showmatch
" Break lines
"set textwidth=80
set title
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
" syntax
syntax on
" support 256 colors in Lion terminal 
set t_Co=256
" files 
filetype on
filetype indent on
filetype plugin on
" always show file name
set modeline
set ls=2
" colorscheme molokai
colorscheme molokai
hi Normal ctermbg=NONE
